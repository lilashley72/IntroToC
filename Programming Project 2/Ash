}

double Transportation::vehicle()
{
double miles;
  cout<< "Enter the amount of miles driven by private vehicle: ";
  //cin>> miles;
  miles = ValidateDouble.ValidateResponse();
  return miles * MAX_COST_PER_MILE_DRIVEN;
}

